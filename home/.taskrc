# Here is an example of entries that use the default, override and blank values
#   variable=foo   -- By specifying a value, this overrides the default
#   variable=      -- By specifying no value, this means no default
#   #variable=foo  -- By commenting out the line, or deleting it, this uses the default
# Use the command 'task show' to see all defaults and overrides
# Files
data.location=~/.task

include ~/.task/theme.rc
include ~/.task/intheam.rc
include ~/.task/reports.rc
include ~/.task/udas.rc



context.Workday=project.not:Personal or (project:Personal -Backlog) or +OVERDUE or (due.after:now due.before:now+2hr)
# Working hours:
#
# Show:
#   * Personal projects 
#   * High priority items
#   * Non-backlog items

context.Lagrange=project:Lagrange -Private

context.Lagrange.Focus=project:Lagrange (-Backlog) -Private
context.Lagrange.Admin=project:Lagrange (+Chore or +Backlog) -Private

context.Personal=project.not:Lagrange or priority:H or +OVERDUE

default.command=ready
recurrence.limit=1

